{% extends 'base.html.twig' %}

{% block title 'Agence Lorem ipsum' %}
{% block body %}

    <div class="jumbotron text-center">

        <h1> Agence Lorem ipsum</h1>
        <p> blablablablablablablablablablablablablablablablablablablablablablablablablablablablablablablablablablablabla </p>
    </div>
    <div class="container">
        <h2> Les derniers biens</h2>

        <div class="row flex">
            {% for property in properties %}
                <div class="col-md-12">

                <div class="col-md-4">
                    <h5>
                        <a href="{{ path('property.show',{id: property.id}) }}">{{ property.title }}</a>
                    </h5>
                </div>
                <div class="col-md-4">
                    <h5>
                       { property.description }}
                    </h5>
                </div>
                <div class="col-md-4">
                    <h5>
                        {{ property.price }}
                    </h5>
                </div>

                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}